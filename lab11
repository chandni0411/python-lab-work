#1. Write a Python program to display details of an image (dimension of an image, shape of an image, min pixel value at channel B).
import numpy as np
	from PIL import Image
	img = Image.open(r'C:\Users\DELL\Downloads\MU.jpg')
	img_array = np.array(img)
	height, width = img_array.shape[0], img_array.shape[1]
	shape = img_array.shape
	min_blue = np.min(img_array[:, :, 2])
	print("Image Dimensions (Height x Width):", (height, width))
	print("Shape of the Image (H x W x Channels):", shape)
	print("Minimum Pixel Value at Blue Channel:", min_blue) l.

#2. Write a Python program to padding black spaces
	import numpy as np
	from PIL import Image
	import matplotlib.pyplot as pl
	img = Image.open(r"C:\Users\DELL\Downloads\MU.jpg")
	img_array = np.array(img)
	pad_top, pad_bottom, pad_left, pad_right = 50, 50, 50, 50
	padded_img = np.pad(img_array,
	((pad_top, pad_bottom), (pad_left, pad_right), (0, 0)),
	mode='constant', constant_values=0)
	plt.figure(figsize=(10, 5))
	plt.subplot(1, 2, 1)
	plt.imshow(img_array)
	plt.title("Original Image") aa.plt.axis("off") bb.plt.subplot(1, 2, 2) cc.plt.imshow(padded_img)
dd.plt.title("Padded Image with Black Spaces")
ee.plt.axis("off")
ff.plt.tight_layout() gg.plt.show()
